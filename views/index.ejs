<!DOCTYPE html>
<html lang="en">
<head>
  <title>Book Details</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container">
  <form method="post" action="/insertdata">
    <div class="form-group">
        <label for="Bookname">Book Name:</label>
        <input type="text" class="form-control"  placeholder="Enter Book Name...." name="Bname">
      </div>
    <div class="form-group">
      <label for="Bookprice">Book Price:</label>
      <input type="text" class="form-control"  placeholder="Enter Book Price...." name="Bprice">
    </div>
    <div class="form-group">
      <label for="Bookauthor">Book Author:</label>
      <input type="text" class="form-control"  placeholder="Enter Book author...." name="Bauthor">
    </div> 
    <div class="form-group">
      <label for="pages"> Book Pages :</label>
      <select name="pages">
        <option value="">Select-Pages</option>

        <%
            let pages = ["100","200","300","400"]; 
            for(let i in pages) {
        %>
                <option value="<%= pages[i] %>"><%= pages[i] %></option>
        <% } %>

    </select>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>

  </form>
  
</div>
<a href="/view">View Record</a>

</body>
</html>